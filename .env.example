# Supabase Configuration (Optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Spotify API Configuration (Required)
# Get these from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Genius API Configuration (Optional - for lyrics)
# Get from: https://genius.com/api-clients
GENIUS_ACCESS_TOKEN=your_genius_access_token_here

# Musixmatch API Configuration (Alternative to Genius)
MUSIXMATCH_API_KEY=your_musixmatch_api_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here